# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
# PostgreSQL connection string for Prisma ORM
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://postgres:password@localhost:5432/inventory_db?schema=public"

# After setting up your database URL:
# 1. Generate Prisma Client: npm run db:generate
# 2. Run migrations: npm run db:migrate
# 3. (Optional) Seed database: npm run db:seed

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# xAI API Configuration (Phase 3 - Required for Chat)
XAI_API_KEY=your-xai-api-key-here
XAI_MODEL=grok-beta
XAI_API_BASE_URL=https://api.x.ai/v1
XAI_MAX_TOKENS=4096
XAI_TEMPERATURE=0.7

# Chat Configuration (Phase 3)
CHAT_RATE_LIMIT_PER_HOUR=100
MAX_CHAT_CONTEXT_LENGTH=20
CHAT_MESSAGE_RETENTION_DAYS=90

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
